<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
android:backgroundTint="@android:color/black"
android:backgroundTintMode="add"
android:layout_height="match_parent">

    <edu.pjwstk.ifpk.nocmuzeowapp.CameraSourcePreview
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".35"
        android:foregroundGravity="center"
        android:paddingBottom="0dp"
        android:paddingTop="0dp">

        <edu.pjwstk.ifpk.nocmuzeowapp.GraphicOverlay
            android:id="@+id/graphicOverlay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:foregroundGravity="center_vertical|center_horizontal|center"
            android:padding="0dp" />
    </edu.pjwstk.ifpk.nocmuzeowapp.CameraSourcePreview>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/s_mapaBttn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="false"
            android:layout_centerInParent="false"
            android:layout_centerVertical="false"
            android:layout_weight="0.5"
            android:background="@color/colorPrimary"
            android:drawableEnd="@drawable/ic_marker"
            android:drawableRight="@drawable/ic_marker"
            android:drawableTint="#ffffff"
            android:paddingLeft="52dp"
            android:paddingRight="38dp"
            android:text="Mapa"
            android:textColor="#fff"
            android:textSize="20sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

        <Button
            android:id="@+id/s_riddleBttn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="false"
            android:layout_centerInParent="false"
            android:layout_centerVertical="false"
            android:layout_weight="0.5"
            android:background="@color/colorPrimary"
            android:drawableEnd="@drawable/ic_question"
            android:drawableRight="@drawable/ic_question"
            android:drawablePadding="2dp"
            android:paddingLeft="32dp"
            android:paddingRight="22dp"
            android:drawableTint="#ffffff"
            android:text="Zagadka"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/foundHeroLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:foregroundTint="@color/colorPrimary"
        android:gravity="center_vertical|fill_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:visibility="invisible"
        android:weightSum="1">

        <TextView
            android:id="@+id/foundHeroText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".35"
            android:gravity="center"
            android:text="First line\r\nNext line"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/foundHeroImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".65"
            app:srcCompat="@drawable/hero_aatrox" />

        <Button
            android:id="@+id/foundHeroButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="OK" />

    </LinearLayout>


</FrameLayout>