<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logoMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        app:srcCompat="@drawable/pjatk_logo" />

    <TextView
        android:id="@+id/instrukcja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/logoMain"
        android:padding="10dp"
        android:text=" 1. Rozwiąż zagadkę, by znaleźć kod QR wybranego bohatera. \n Pomocna będzie mapa \n 2. Zeskanuj kod QR \n 3. Kliknij na zebranego bohatera by dowiedzieć się o nim więcej \n 4. Zbierz wszystkich 8 bohaterów \n 5. Odbierz nagrodę \n 6. Powodzenia!"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:text="@string/instructions" />

    <Button
        android:id="@+id/startBttn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="false"
        android:layout_centerVertical="false"
        android:background="@color/colorPrimary"
        android:text="Start"
        android:textColor="#fff"
        android:textSize="20sp" />
</RelativeLayout>