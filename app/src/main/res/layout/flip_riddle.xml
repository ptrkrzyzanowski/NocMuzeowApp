<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:backgroundTint="@android:color/black"
    android:backgroundTintMode="add"
    android:layout_height="match_parent"
    android:rowCount="10"
    android:columnCount="19">

    <TextView
        android:id="@+id/riddle_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="Challenge"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/riddle_image"
        android:layout_width="match_parent"
        android:layout_height="206dp"
        android:layout_below="@+id/riddle_name"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/unknown_sprmn" />

    <TextView
        android:id="@+id/riddle_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/riddle_image"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:text="TextView"
        android:textColor="?android:attr/editTextColor"
        android:textSize="20sp"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mapaBttn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="false"
            android:layout_centerInParent="false"
            android:layout_centerVertical="false"
            android:layout_weight="0.5"
            android:background="@color/colorPrimary"
            android:drawableEnd="@drawable/ic_marker_w"
            android:drawableRight="@drawable/ic_marker_w"
            android:drawable="@android:color/white"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Mapa"
            android:textColor="#fff"
            android:textSize="20sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/white"/>

        <Button
            android:id="@+id/skanerBttn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="false"
            android:layout_centerVertical="false"
            android:layout_weight="0.5"
            android:background="@color/colorPrimary"
            android:drawableEnd="@drawable/ic_qrcode_w"
            android:drawableRight="@drawable/ic_qrcode_w"
            android:drawable="@android:color/white"
            android:paddingLeft="16dp"
            android:paddingRight="15dp"
            android:text="Skaner"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>
</RelativeLayout>